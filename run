BUILD_DIR="temp"

mkdir -p $BUILD_DIR

javac -cp main.Main -d $BUILD_DIR src/*/*.java

if [ $? -eq 0 ]; then
  echo "Compilation successful. Classes moved to $BUILD_DIR"
else
  echo "Compilation failed."
fi

echo "Compiling Jar"
jar cfe "${BUILD_DIR}/game.jar" main.Main -C $BUILD_DIR .
rm "${BUILD_DIR}/*.class"
rm "${BUILD_DIR}/*/.class"
java -jar "${BUILD_DIR}/game.jar"



